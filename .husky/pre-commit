. "$(dirname "$0")/_/husky.sh"

if [[ "$(pwd)" == //wsl.localhost/* ]]; then
  echo "Husky: Ambiente Windows/WSL detectado. Redirecionando para 'npx lint-staged' no WSL..."
  wsl.exe -d Ubuntu npx lint-staged
  exit $?
else
  echo "Husky: Ambiente Linux/WSL nativo detectado. Executando 'npx lint-staged'..."
  npx lint-staged
  exit $?
finpx lint-staged
